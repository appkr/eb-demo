<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Hello ElasticBeanstalk</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Nunito:200,600" rel="stylesheet">

  <!-- Styles -->
  <style>
    html, body {
      background-color: rgb(233,237,238);
      color: #636b6f;
      font-family: 'Nunito', sans-serif;
      font-weight: 200;
      height: 100vh;
      margin: 0;
      padding: 0;
    }

    .full-height {
      height: 100vh;
    }

    .flex-center {
      align-items: center;
      display: flex;
      justify-content: center;
    }

    .position-ref {
        position: relative;
    }

    .top-bar {
      position: absolute;
      top: 0;
      left: 0;
      background-color: #FFF;
      width: 100%;
      height: 60px;
    }

    .content {
      text-align: center;
    }

    .title {
      font-size: 48px;
    }

    .subtitle {
      font-size: 24px;
      color: #888888;
    }

    .m-b-md {
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
<div class="flex-center position-ref full-height">
  <div class="top-bar"></div>

  <div class="content">
    <div class="title m-b-md">
      {{title}}
      <br>
      <small>{{env}}</small>
    </div>

    <div class="subtitle">
      <p>{{subtitle}} {{fibonacci}}</p>
    </div>
  </div>
</div>
</body>
</html>
